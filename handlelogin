import { signInWithEmailAndPassword } from "firebase/auth";
import { auth } from "../config/firebaseConfig"; // o donde estÃ© tu config

const handleLogin = async (e) => {
  e.preventDefault();

  if (formData.username && formData.password) {
    setAlertCustom({
      type: 'confirm',
      message: 'Â¿EstÃ¡ seguro que quiere ingresar?'
    });

    try {
      const userCredential = await signInWithEmailAndPassword(
        auth,
        formData.username,
        formData.password
      );

      const user = userCredential.user;
      const token = await user.getIdToken();

      console.log("ğŸ”¥ UID:", user.uid);
      console.log("ğŸ” Token:", token);

      // AquÃ­ podrÃ­as guardar el token localmente si vas a usarlo con el backend
      localStorage.setItem("token", token);

      // Redirigir o mostrar bienvenida
    } catch (error) {
      console.error("âŒ Error de autenticaciÃ³n:", error.message);
      setAlertCustom({ type: 'error', message: 'Credenciales invÃ¡lidas' });
    }

  } else {
    setAlertCustom({ type: 'error', message: 'Complete todos los campos' });
  }
};
